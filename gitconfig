[alias]
    st = status
    ci = commit
    cif = "!. ~/.githelpers && fixup"
    co = checkout
    coh = "!. ~/.githelpers && checkout_history"
    head = !git l -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
